{
	"$schema": "https://schemas.wp.org/trunk/block.json",
	"apiVersion": 3,
	"name": "formgent/single-choice",
	"title": "Single Choice",
	"category": "formgent",
	"description": "FormGent Single Choice field.",
	"textdomain": "formgent",
	"attributes": {
		"id": {
			"type": "string",
			"default": ""
		},
		"name": {
			"type": "string",
			"default": "single-choice"
		},
		"value": {
			"type": "string",
			"default": "one"
		},
		"options": {
			"type": "array",
			"default": []
		},
		"label": {
			"type": "string",
			"default": "Single Choice"
		},
		"label_alignment": {
			"type": "string",
			"default": "left"
		},
		"sub_label": {
			"type": "string",
			"default": "Select Single Choice Here"
		},
		"required": {
			"type": "boolean",
			"default": false
		}
	},
	"supports": {
		"interactivity": true
	}
}
