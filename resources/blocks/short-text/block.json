{
  "$schema": "https://schemas.wp.org/trunk/block.json",
  "apiVersion": 3,
  "name": "formgent/short-text",
  "title": "Short Text",
  "category": "formgent",
  "description": "FormGent Short Text field.",
  "textdomain": "formgent",
  "attributes": {
    "id": {
      "type": "string",
      "default": ""
    },
    "name": {
      "type": "string",
      "default": "short_text"
    },
    "value": {
      "type": "string",
      "default": "Short Text Value"
    },
    "placeholder": {
      "type": "string",
      "default": "Type Short Text"
    },
    "label": {
      "type": "string",
      "default": "Short Text"
    },
    "label_alignment": {
      "type": "string",
      "default": "left"
    },
    "sub_label": {
      "type": "string",
      "default": "Enter Short Text Here"
    },
    "required": {
      "type": "boolean",
      "default": false
    }
  },
  "supports": {
    "interactivity": true
  }
}
