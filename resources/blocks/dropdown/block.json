{
  "$schema": "https://schemas.wp.org/trunk/block.json",
  "apiVersion": 3,
  "name": "formgent/dropdown",
  "title": "Dropdown",
  "category": "formgent",
  "description": "FormGent Dropdown field.",
  "textdomain": "formgent",
  "attributes": {
    "id": {
      "type": "string",
      "default": ""
    },
    "name": {
      "type": "string",
      "default": "dropdown"
    },
    "value": {
      "type": "string",
      "default": "one"
    },
    "options": {
      "type": "array",
      "default": []
    },
    "optionst": {
      "type": "array",
      "default": [
        {
          "label": "One",
          "value": "one"
        },
        {
          "label": "Two",
          "value": "two"
        },
        {
          "label": "Three",
          "value": "three"
        }
      ]
    },
    "label": {
      "type": "string",
      "default": "Dropdown"
    },
    "label_alignment": {
      "type": "string",
      "default": "left"
    },
    "sub_label": {
      "type": "string",
      "default": "Select Dropdown Here"
    },
    "required": {
      "type": "boolean",
      "default": false
    }
  },
  "supports": {
    "interactivity": true
  }
}
